generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id               String        @id
  title            String
  description      String?
  longDescription  String?
  location         String
  scope            String
  bhk              String
  pricing          String
  budget           String?
  area             String?
  style            String?
  status           ProjectStatus @default(COMPLETED)
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt

  // Relations
  images           ProjectImage[]

  @@map("projects")
}

enum ProjectStatus {
  COMPLETED
}

model ProjectImage {
  id        String   @id @default(cuid())
  url       String
  alt       String?
  order     Int      @default(0)
  projectId String
  createdAt DateTime @default(now())

  // Relations
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@map("project_images")
}

// Designs domain
model Category {
  id          String  @id            // e.g. "living-room"
  title       String
  description String?
  image       String?
  count       Int?

  // Relations
  designs     Design[]

  @@map("categories")
}

model Design {
  id             String   @id @default(cuid())
  slug           String   @unique               // e.g. "living-room-1"
  title          String
  categoryId     String
  category       Category @relation(fields: [categoryId], references: [id])
  style          String?
  price          String?
  image          String?
  description    String?
  specifications Json?
  sections       Json?
  idealFor       String?
  images         String[]
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@map("designs")
}

// Home Price Calculator Estimates
model HomeEstimate {
  id             String   @id @default(cuid())
  name           String
  email          String
  phone          String
  propertyName   String
  bhk            String
  size           String?                      // "small" or "large", null for 1/2/5 BHK
  packageType    String                       // "essentials", "premium", "luxe"
  estimatedPrice Int
  rooms          Json                          // Room counts object
  breakdown      Json?                         // Price breakdown per room
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@map("home_estimates")
}

// Wardrobe Price Calculator Estimates
model WardrobeEstimate {
  id              String   @id @default(cuid())
  name            String
  email           String
  phone           String
  propertyName    String
  whatsappUpdates Boolean  @default(false)
  height          String
  type            String
  finish          String?        // optional
  material        String?        // optional
  accessories     String[] @default([]) 
        // Array of accessories like ["loft", "drawer"]
  estimatedPrice  Int
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("wardrobe_estimates")
}

// Kitchen Price Calculator Estimates
model KitchenEstimate {
  id              String   @id @default(cuid())
  name            String
  email           String
  phone           String
  city            String
  message         String?                      // Optional additional requirements
  layout          String                       // "l-shaped", "u-shaped", "straight", "parallel"
  dimensionA      Float                        // Dimension A in feet
  dimensionB      Float?                       // Dimension B in feet (optional for straight layout)
  dimensionC      Float?                       // Dimension C in feet (optional, only for U-shaped)
  packageType     String                       // "essentials", "premium", "luxe"
  estimatedPrice  Int
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("kitchen_estimates")
}

model Contact {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  phone     String
  address   String?
  message   String
  createdAt DateTime @default(now())

  @@map("contacts")
}
